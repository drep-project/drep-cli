package bean

import "github.com/drep-project/drepcli/mycrypto"

type Setup struct {
	Height int64

	Msg                  []byte
}

type Commitment struct {
	Height int64

	Q                    *mycrypto.Point
}

type Challenge struct {
	Height int64

	SigmaPubKey          *mycrypto.Point
	SigmaQ               *mycrypto.Point
	R                    []byte
}

type Response struct {
	Height int64

	S                    []byte
}

type Fail struct {
	Height int64

	Reason string
}